# Example environment configuration file for the application.
# Copy this file to .env and modify the values as needed.
# Do not commit your actual .env file to version control.
# Many of these options are optional and have sensible defaults.
# Some options are adjustable via the web UI under the Options panel.
#
# HTTP server port (default: 8081)
PORT=8081

# Whether the spider should be enabled automatically at server start (default: false)
SPIDER_ENABLED_AT_START=false

# Spidering depth (0 = disabled, 1 = follow links one level deep, default: 1)
SPIDER_DEPTH=1

# Maximum pages to fetch per starting page (seed, default: 10)
SPIDER_MAX_PER_SEED=10

# Only follow links on the same origin as the seed URL (default: true)
SPIDER_SAME_ORIGIN_ONLY=true

# Timeout for spider fetches in milliseconds (default: 8000)
SPIDER_TIMEOUT_MS=8000

# Throttle speed per unique domain (requests per second, default: 1)
SPIDER_REQUESTS_PER_SEC=1

# Whether to respect robots.txt (default: true)
SPIDER_RESPECT_ROBOTS=true

# User-Agent to use for generated fuzz curl commands (optional)
FUZZ_USER_AGENT=

# Whether to enable aggressive fingerprinting (default: false)
AGGRESSIVE_FINGERPRINTING=false

# CVE lookup (NVD) configuration
CVE_LOOKUP_ENABLED=true
NVD_API_KEY=
NVD_RESULTS_PER_TECH=5

# LLM integration configuration
LLM_HOST=127.0.0.1
LLM_PORT=1234
LLM_TIMEOUT_MS=300000
LLM_MODEL=
LLM_API_TYPE=LMStudio

# API keys for different LLM providers
OPENAI_API_KEY=
GEMINI_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434
